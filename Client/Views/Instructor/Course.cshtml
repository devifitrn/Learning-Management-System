@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_InstructorLayout";
    @section Scripts{
        <script>const userId = '@Context.Session.GetString("Id")';</script>
        <script src="~/js/Instructor/course.js" asp-append-version="true"></script>
    }
}
<div class="container-fluid px-4">
    <div class="row mt-4">
        <div class="col-6"><h1>Course</h1></div>
        <div class="col-6">
            <ol class="breadcrumb mb-4 bg-white float-right">
                <li class="breadcrumb-item"><a href="/instructor/">Instructor</a></li>
                <li class="breadcrumb-item active">Course</li>
            </ol>
        </div>
    </div>
    <button type="button" class="btn btn-primary my-3" data-toggle="modal" data-target="#formInput">Tambah</button>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover table-sm nowrap" width=100% id="tableCourse">
                <thead class="thead-dark">
                    <tr>
                        <th>No</th>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Features</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>
</div>
<div class="modal" id="formInput">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h5 class="modal-title">Form Input</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form class="needs-validation" novalidate>
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" id="title" required>
                            <div class="invalid-feedback"> Harap Input Title</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="description">Description</label>
                            <textarea class="form-control" id="description" rows="5" required></textarea>
                            <div class="invalid-feedback"> Harap Input Description</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="features">Features</label>
                            <textarea class="form-control" id="features" rows="5" required></textarea>
                            <div class="invalid-feedback"> Harap Input Features</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="price">Price</label>
                            <input type="number" class="form-control" id="price" required>
                            <div class="invalid-feedback"> Harap Input Price</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="price">Picture</label>
                            <input class="form-control" type="file" id="foto" accept="image/*" required />
                            <div class="invalid-feedback"> Harap Input Picture</div>
                        </div>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary" id="submitButton" type="submit">Create Course</button>
                    </div>
                    
                </form>
            </div>
            <!-- Modal footer 
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
            -->
         </div>
    </div>
</div>
