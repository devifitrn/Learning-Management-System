@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";

    @section Scripts{
        <script src="~/js/Student/Content.js" asp-append-version="true"></script>
    }

}

<div class="container-fluid p-0">
    <div class="row mt-lg-5" id="subContentCourse">
    </div>

    <div class="mt-4">
        <div class="card">
            <div class="card-header" id="btnAddContent"></div>
            <div class="card-body">
                <div id="accordion">

                </div>
            </div>
        </div>
    </div>

</div>

@*modal buy course*@
<div class="modal" tabindex="-1" role="dialog" id="buyCourse">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Buy Course</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>buy this course</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Transaction()">Buy</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

